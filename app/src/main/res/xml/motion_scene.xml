<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@layout/activity_main"
        app:constraintSetStart="@layout/activity_main_start"
        app:duration="1000">

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="20"
                app:motionTarget="@id/img">
                <CustomAttribute
                    app:attributeName="rotation"
                    app:customDimension="15dp" />
            </KeyAttribute>

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/img">
                <CustomAttribute
                    app:attributeName="rotation"
                    app:customDimension="115dp" />
            </KeyAttribute>
        </KeyFrameSet>

        <OnClick app:targetId="@id/img" />
    </Transition>
</MotionScene>